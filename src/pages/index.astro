---
import Layout from '../layouts/Layout.astro';
import Wheel from '../components/Wheel.astro';
import OptionsList from '../components/OptionsList.astro';
---

<Layout title="Random Wheel">
	<div class="min-h-screen bg-gradient-to-br from-pink-200 to-purple-300 p-8 flex flex-col items-center justify-center">
		<h1 class="text-4xl font-bold text-gray-800 mb-8">Random Wheel</h1>
		<div class="flex flex-col md:flex-row items-center justify-center gap-8">
			<Wheel />
			<OptionsList />
		</div>
		<div id="result" class="mt-8 text-2xl font-bold text-gray-800"></div>
	</div>
</Layout>

<script>
  const resultDiv = document.getElementById('result');

  document.addEventListener('wheelSpinComplete', (e) => {
    resultDiv.textContent = `Result: ${e.detail}`;
  });
</script>